{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {#    <form method="post" enctype="multipart/form-data">#}
    {{ form_widget(form._token) }}
    <div class="row">
        <div class="form-group col-md-6">
            {{ form_row(form.tournoiName) }}
        </div>
        <div class="form-group col-md-6">
            {{ form_row(form.city) }}
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            {{ form_row(form.date) }}
        </div>
        <div class="form-group col-md-6">
            {{ form_row(form.ranked) }}
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            {{ form_row(form.eloMin) }}
        </div>
        <div class="form-group col-md-6">
            {{ form_row(form.eloMax) }}
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            {{ form_row(form.gender) }}
        </div>
        <div class="form-group col-md-6">
            {{ form_row(form.round) }}
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            {{ form_row(form.playerMin) }}
        </div>
        <div class="form-group col-md-6">
            {{ form_row(form.playerMax) }}
        </div>
    </div>
    <div class="mt-2 text-end">
        <button class="btn btn-primary">
            <i class="fa-solid fa-floppy-disk md-2"></i>
            Sauvegarder
        </button>
    </div>
    {{ form_end(form) }}
{% endblock %}

