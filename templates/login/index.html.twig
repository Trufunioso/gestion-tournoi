{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    <h3>Se connecter</h3>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post" class="col-4">
        <label for="username">Username:</label>
        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password">Password:</label>
        <input type="password" class="form-control" id="password" name="_password"/>


        <input type="hidden" name="_target_path" value="default_home"/>

        <button type="submit" class="btn btn-success mt-2">Connexion</button>

        <div class="mt-3">Vous n'avez pas encore de compte? <a href="{{ path('app_register') }}">Inscrivez-vous</a></div>

    </form>

{% endblock %}